{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Eagle Blocker",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": { "all": true },
      "shell": { "all": false, "open": true },
      "dialog": { "all": true }
    },
    "windows": [
      {
        "label": "main",
        "title": "Eagle Blocker",
        "width": 800,
        "height": 600
      }
    ],
    "security": { "csp": null },
    "bundle": {
      "active": true,
      "targets": ["msi", "nsis"],
      "identifier": "com.eagleblocker.app",
      "publisher": "Your Company or Name",
      "icon": [
        "icons/icon.ico",
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns"
      ]
    }
  }
}